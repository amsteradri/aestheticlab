<!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ page_title }}</title>
        <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">
        <link rel="stylesheet" href="{{ 'flipdown.css' | asset_url }}" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
        {{ content_for_header }}
        <style>
            /* Estilo general para el cuerpo */
            body {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
                height: 100vh;
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background-color: #000;
                background-image: url('{{ "al_background.jpg" | asset_url }}');
                background-position: center;
                background-size: cover;
                background-repeat: no-repeat;
                position: relative;
            }
    
            /* Estilo para el contenedor FlipDown */
            #flipdown {
                width: auto;
                text-align: center;
                margin-top: 20px; /* Añadir espacio superior */
                margin-bottom: 50px; /* Añadir espacio inferior */
            }

             /* Estilo para el texto debajo del contador */
        .coming-soon-text {
            font-family: 'Titillium Web', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            text-align: center;
            color: #fff;
            margin-top: 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
            background: linear-gradient(90deg, #ff6a00, #ee0979);
            -webkit-background-clip: text;
            background-clip: text;
            animation: glow 1.5s ease-in-out infinite alternate;
        }

        /* Efecto de resplandor */
        @keyframes glow {
            0% {
                text-shadow: 0 0 5px rgba(255, 255, 255, 0.5), 0 0 10px rgba(255, 255, 255, 0.5);
            }
            100% {
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.7), 0 0 30px rgba(255, 255, 255, 0.7);
            }
        }
        </style>
    </head>
    <body>
        <div id="inicio" class="container">
            <div class="logo">
                <img src="{{ 'al3d.gif' | asset_url }}" alt="Aesthetic Lab Logo">
            </div>
    
            <!-- Contenedor para el FlipDown -->
            <div id="flipdown" class="flipdown"></div>
            <div class="coming-soon-text">FIRST DROP COMING SOON!</div>
    
            <!-- Botón de acceso -->
            {% comment %} <a href="/pages/tienda" class="access-link">[ ACCEDER ]</a> {% endcomment %}
        </div>
    
        {{ content_for_footer }}
        <div class="overlay"></div>
    
        <!-- Cargar el JavaScript de FlipDown -->
        <script src="{{ 'flipdown.js' | asset_url }}" defer></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Establecer la fecha y hora objetivo: 21 de diciembre de 2024 a las 17:00 (5 PM)
                var targetDate = new Date('December 21, 2024 17:00:00 GMT+0000'); // Usa tu zona horaria si es necesario
                var datetime = Math.floor(targetDate.getTime() / 1000); // Convertir a segundos desde la época Unix
    
                // Inicializar el FlipDown en el contenedor
                var flipdown = new FlipDown(datetime, document.getElementById('flipdown'), {
                    theme: 'dark' // Cambiar a 'light' si prefieres el tema claro
                });
    
                // Iniciar el contador
                flipdown.start();
    
                // Acción al terminar la cuenta regresiva
                flipdown.ifEnded(() => {
                    console.log('¡La cuenta regresiva ha terminado!');
                });
            });
        </script>
    </body>
    </html>
    
    